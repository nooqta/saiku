{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true, // This ensures type declaration files are generated
    "declarationMap": true, // Optional, helps with debugging
    "sourceMap": true, // Optional, helps with debugging
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "assets":["**/*.yaml","**/*.yml"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules", "tmp", "dist", "src/**/*.spec.ts"
  ]
}